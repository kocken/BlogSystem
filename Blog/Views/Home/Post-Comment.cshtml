@model Domain.Comment

@{
    ViewData["Title"] = "Post comment";
}
<h1>@ViewData["Title"]</h1>

<form action="Post-Comment" method="post">
    @if (ViewBag.ErrorMessage != null)
    {
        <p class="text-danger">@ViewBag.ErrorMessage</p>
    }
    <div class="form-label-group">
        @Html.LabelFor(m => m.Message)
        @Html.TextBoxFor(m => m.Message, new { @class = "form-control", type = "text", id = "message", required = true, autofocus = true })
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>
    <input asp-for="@Model.ThreadId" type="hidden" />
    <button class="btn btn-lg btn-primary btn-block" type="submit">Post comment</button><br />
</form>

<link href="~/css/create-post.css" rel="stylesheet" />

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>